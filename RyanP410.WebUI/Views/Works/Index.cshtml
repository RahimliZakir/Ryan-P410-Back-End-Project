@model WorksViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="card-inner active" id="works-card">
    <div class="card-wrap">

        <!--
            Works
        -->
        <div class="content works">

            <!-- title -->
            <div class="title">Recent Works</div>

            <!-- filters -->
            <div class="filter-menu filter-button-group">
                <div class="f_btn active">
                    <label><input type="radio" name="fl_radio" value="grid-item" />All</label>
                </div>
                @foreach (var item in Model.Categories)
                {
                    <div class="f_btn">
                        <label><input type="radio" name="fl_radio" value="@item.Name.ToLower()" />@item.Name</label>
                    </div>
                }
            </div>

            <!-- content -->
            <div class="row grid-items border-line-v">

                <!-- work item photo -->
                @foreach (var item in Model.Works)
                {
                    <div class="col col-d-6 col-t-6 col-m-12 grid-item @item.Category.Name border-line-h">
                        <div class="box-item">
                            <div class="@item.Category.Name">
                                <a href="~/uploads/works/@item.ImagePath" class="has-popup-image">
                                    <img src="~/uploads/works/@item.ImagePath" alt="" />
                                    <span class="info">
                                        <span class="ion ion-image"></span>
                                    </span>
                                </a>
                            </div>
                            <div class="desc">
                                <a href="images/works/work1.jpg" class="name has-popup-image">@item.Title</a>
                                <div class="category">@item.Category.Name</div>
                            </div>
                        </div>
                    </div>
                }

                <div class="clear"></div>
            </div>

        </div>

    </div>
</div>

@section js{
<script>
    $(document).ready(function(){
    let lis = $('.top-menu li');

      $(lis).removeClass('active');
      $(lis).eq(2).addClass('active');
    });
</script>
}