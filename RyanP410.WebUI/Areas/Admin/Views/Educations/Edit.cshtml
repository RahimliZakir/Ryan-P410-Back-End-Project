@model EducationViewModel

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Position" class="label-required">Mövqe: </label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place" class="label-required">İş Yeri: </label>
        <input asp-for="Place" class="form-control" />
        <span asp-validation-for="Place" style="color: red;"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Description" class="label-required">Ətraflı: </label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="BeginYear" class="label-required">Başlama İli: </label>
        <input asp-for="BeginYear" class="form-control" />
        <span asp-validation-for="BeginYear" style="color: red;"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndYear">Bitirmə İli: </label>
        <input asp-for="EndYear" class="form-control" />
    </div>
    <a asp-action="Index" class="btn btn-danger">Geriyə</a>
    <button class="btn btn-info" type="submit">Yenilə</button>
</form>

@section js{
<script src="libs/jquery-validate/jquery.validate.min.js"></script>
<script src="libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="libs/autosize.js/autosize.min.js"></script>
<script>
    $(function(){
        autosize($('textarea'))
    });
</script>
}
