          href="admin-assets/assets/icon/feather/css/feather.css" />
    <!-- Style.css -->
    <link rel="stylesheet" href="libs/font-awesome/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="admin-assets/assets/css/style.css" />
    <link rel="stylesheet"
          type="text/css"
          href="admin-assets/assets/css/jquery.mCustomScrollbar.css" />
    <link rel="stylesheet" href="assets/css/style.customize.css" />
    <style>
        .label-required {
            position: relative;
            display: inline-block;
        }

            .label-required::after {
                content: '*';
                position: absolute;
                color: crimson;
            }

        i {
            margin-right: 0 !important;
        }

        .profile-notification a {
            text-decoration: none;
        }

        .dropdown-pricing-ul {
            display: none;
            padding: 0 9%;
        }

            .dropdown-pricing-ul > li {
                margin: 3.5% 0;
            }

            .dropdown-pricing-ul a {
                display: inline-block;
                text-decoration: none;
                font-size: 0.9rem;
                background-color: transparent !important;
                color: white !important;
            }

        .dropdown-icon {
            transition: 0.5s;
        }

            .dropdown-icon.rotate {
                transform: rotate(-180deg);
            }
    </style>
    @await RenderSectionAsync("css", required: false)
</head>

