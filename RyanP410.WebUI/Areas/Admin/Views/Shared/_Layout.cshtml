    <script>
        $(document).ready(function(){
         let dropdownPricingSide = $('.dropdown-pricing-side');

         $(dropdownPricingSide).click((e) => {
             let dropdownPricingUl = $(e.currentTarget).next('.dropdown-pricing-ul');

             if($(dropdownPricingUl).hasClass('dropped')){
                 $(dropdownPricingUl).slideUp();
                 $(dropdownPricingUl).removeClass('dropped');
                 $(e.currentTarget).find('i.dropdown-icon').removeClass('rotate');
             }
             else{
                 $(dropdownPricingUl).slideDown();
                 $(dropdownPricingUl).addClass('dropped');
                 $(e.currentTarget).find('i.dropdown-icon').addClass('rotate');
             }
         });
        });
    </script>
