@model Person

@{
    ViewData["Title"] = "Create";
}

@section css{
<link rel="stylesheet" href="libs/jquery-image-input/jquery.image-input.css" />
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Name" class="label-required">Ad: </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="label-required">Soyad: </label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="label-required">Yaş: </label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="label-required">Ətraflı: </label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Residence" class="label-required">Yaşayış yeri: </label>
                <input asp-for="Residence" class="form-control" id="editor" />
                <span asp-validation-for="Residence" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="label-required">Adres: </label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" style="color: red;"></span>
            </div>
            <div class="form-group">
                <label asp-for="Freelance">Freelance: </label>
                <input asp-for="Freelance" class="ms-2 form-check-input" />
            </div>
            <a asp-action="Index" class="btn btn-danger">Geriyə</a>
            <button class="btn btn-info" type="submit">Əlavə et</button>
        </div>
        <div class="col-6">
            <div class="form-group">
                <image asp-for="file" asp-caption="Şəkil: "></image>
            </div>
            <div class="form-group">
                <label name="resume" for="resume">Resume: </label>
                <input type="file" name="resume" id="resume" accept="application/msword, application/vnd.ms-excel, application/vnd.ms-powerpoint,
                text/plain, application/pdf" />
            </div>
        </div>
    </div>
</form>

@section js{
<script src="libs/jquery-image-input/jquery.image-input.js"></script>
<script src="libs/jquery-validate/jquery.validate.min.js"></script>
<script src="libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="libs/autosize.js/autosize.min.js"></script>
<script>
    $(function(){
        autosize($('textarea'))
    });
</script>
}

